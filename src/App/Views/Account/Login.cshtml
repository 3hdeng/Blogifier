@using Microsoft.AspNetCore.Identity
@model LoginModel
@inject SignInManager<AppUser> SignInManager
@{
    Layout = "_Layout.cshtml";
}
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" class="form" method="POST">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label for="UserName">Username</label>
                                    <input asp-for="UserName" class="form-control form-control form-control-top" placeholder="username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input asp-for="Password" class="form-control form-control form-control-bottom" placeholder="password">
                                </div>
                                <div>
                                    <label class="custom-control custom-checkbox">
                                        <input asp-for="RememberMe" type="checkbox" class="form-control-input form-control-bottom">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description small text-dark">Remember me</span>
                                    </label>
                                </div>
                                <div class="btn-group float-right">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <button type="button" onclick="goHome()" class="btn btn-default">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>