@model RegisterModel
<div class="bf-main">
    @Html.Partial($"~/Views/Settings/_Taskbar.cshtml")
    <div class="bf-body">
        <form method="post" asp-controller="Settings" asp-action="Register" asp-antiforgery="true">
            <div class="bf-content bf-content-boxed bf-settings">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="form-group-label" asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" class="form-control" autofocus />
                </div>
                <div class="form-group">
                    <label class="form-group-label" asp-for="Email"></label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-group-label" asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-group-label" asp-for="ConfirmPassword"></label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary btn-main">Save</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @if (TempData["msg"] != null)
    {
    <script>toastr.success('@TempData["msg"]')</script>
    }
}