@model Blogifier.Core.Data.Models.RssImportModel

<form id="frmRssImport" asp-controller="Admin" asp-action="Tools" method="post">
    <h2>
        RSS Import
        <a href="https://github.com/blogifierdotnet/Blogifier.Core/wiki/RSS-Import" class="pull-right" style="color:#ccc" target="_blank" title="Help">
            <span class="glyphicon glyphicon-question-sign help-icon" aria-hidden="true"></span>
        </a>
    </h2>
    <div id="importForm">
        <div class="form-group">
            <input type="text" asp-for="FeedUrl" class="form-control" placeholder="RSS Url" />
            <span asp-validation-for="FeedUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Domain" type="text" class="form-control" placeholder="Domain Url" />
            <span asp-validation-for="Domain" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="SubDomain" type="text" class="form-control" placeholder="Sub Folder" />
            <span asp-validation-for="SubDomain" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ImportImages" type="checkbox" class="form-checkbox" />
            <label asp-for="ImportImages">Import Images</label>
        </div>
        <div class="form-group">
            <input asp-for="ImportAttachements" type="checkbox" class="form-checkbox" />
            <label asp-for="ImportAttachements">Import Attachements</label>
        </div>
        <div id="btnImport">
            <button type="submit" class="btn btn-primary btn-save-setting btn-block">Import</button>
        </div>
    </div>
    <div class="form-group text-center" id="importSpin" style="display: none">
        <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
        <span class="sr-only">Loading...</span>
    </div>
</form>