@model Blogifier.Core.Data.Domain.CustomField

<form id="frmDisqus" asp-controller="Admin" asp-action="Disqus" method="post">
    <h2>
        Disqus script 
        <a href="https://github.com/blogifierdotnet/Blogifier.Core/wiki/Disqus-script" class="pull-right" target="_blank" title="Help">
            <span class="glyphicon glyphicon-question-sign help-icon" aria-hidden="true"></span>
        </a>
    </h2>
    <div id="disqusForm">
        <div class="form-group">
            <textarea asp-for="CustomValue" class="form-control" placeholder="Disqus script" rows="10" cols="70"></textarea>
        </div>
        <div id="btnDisqus">
            <button type="submit" class="btn btn-primary btn-save-setting btn-block">Save</button>
            <input type="hidden" asp-for="CustomKey" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ParentId" />
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="CustomType" />
        </div>
    </div>
    <div class="form-group text-center" id="importSpin" style="display: none">
        <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
        <span class="sr-only">Loading...</span>
    </div>
</form>