@model Blogifier.Core.Data.Models.AdminSyndicationModel
<div class="app-header clearfix p-4">
    <button type="button" class="app-side-toggle"><span></span><span></span><span></span></button>
    <h3>Settings</h3>
</div>
<div class="app-content p-4">
    <div class="app-content p-4">
        <form id="frmRssImport" asp-controller="Admin" asp-action="Syndication" method="post">
            <div id="importForm">
                <div class="form-group">
                    <label asp-for="FeedUrl">RSS Url</label>
                    <input type="text" asp-for="FeedUrl" class="form-control" />
                    <span asp-validation-for="FeedUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Domain">Domain Url</label>
                    <input asp-for="Domain" type="text" class="form-control" />
                    <span asp-validation-for="Domain" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubDomain">Sub Folder</label>
                    <input asp-for="SubDomain" type="text" class="form-control" />
                    <span asp-validation-for="SubDomain" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ImportImages" type="checkbox" class="form-checkbox" />
                    <label asp-for="ImportImages">Import Images</label>
                </div>
                <div class="form-group">
                    <input asp-for="ImportAttachements" type="checkbox" class="form-checkbox" />
                    <label asp-for="ImportAttachements">Import Attachements</label>
                </div>
                <div id="btnImport">
                    <button type="submit" class="btn btn-primary btn-save-setting btn-block">Import</button>
                </div>
            </div>
            <div class="form-group text-center" id="importSpin" style="display: none">
                <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
                <span class="sr-only">Loading...</span>
            </div>
        </form>
    </div>
</div>