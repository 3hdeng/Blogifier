<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Embedded/blog/standard/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Embedded/blog/standard/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Tutorial - Material Kit by Creative Tim</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link href="~/Embedded/blog/standard/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Embedded/blog/standard/css/material-kit.css" rel="stylesheet" />
</head>
<body class="tutorial-page">
    <nav class="navbar navbar-transparent navbar-fixed-top navbar-color-on-scroll" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button id="menu-toggle" type="button" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar bar1"></span>
                    <span class="icon-bar bar2"></span>
                    <span class="icon-bar bar3"></span>
                </button>
                <a href="~/blog">
                    <div class="logo-container">
                        <div class="logo">
                            <img src="~/Embedded/blog/standard/img/logo.png" alt="Blogifier Logo" width="48">
                        </div>
                        <div class="brand">
                            Blogifier.NET
                        </div>
                    </div>
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="~/">Home</a>
                    </li>
                    <li>
                        <a href="~/blog">Blog</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li>
                        <a href="~/admin">Admin</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="wrapper">
        <div class="header header-filter" style="background-image: url('/Embedded/blog/standard/img/ny.jpg');">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h1 class="title text-center">Blogifier</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="main main-raised">
            <div class="section">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <footer class="footer footer-transparent">
        <div class="container">
            <nav class="pull-left">
                <ul>
                    <li>
                        <a href="http://blogifier.net" target="_blank">Blogifier.NET</a>
                    </li>
                    <li>
                        <a href="http://blogifier.azurewebsites.net" target="_blank">Azure</a>
                    </li>
                    <li>
                        <a href="https://github.com/blogifierdotnet" target="_blank">Github</a>
                    </li>
                </ul>
            </nav>
            <div class="social-area pull-right">
                <a class="btn btn-social btn-twitter btn-just-icon" href="https://twitter.com/blogifierdotnet" target="_blank">
                    <i class="fa fa-twitter"></i>
                </a>
                <a class="btn btn-social btn-facebook btn-just-icon" href="https://www.facebook.com/blogifierdotnet/" target="_blank">
                    <i class="fa fa-facebook-square"></i>
                </a>
                <a class="btn btn-social btn-google btn-just-icon" href="https://plus.google.com/u/0/100922379349290637756" target="_blank">
                    <i class="fa fa-google-plus"></i>
                </a>
            </div>
            <div class="copyright">
                &copy; @DateTime.Now.Year Blogifier.NET
            </div>
        </div>
    </footer>
</body>
<script src="~/Embedded/blog/standard/js/jquery.min.js" type="text/javascript"></script>
<script src="~/Embedded/blog/standard/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Embedded/blog/standard/js/material.min.js"></script>
<script src="~/Embedded/blog/standard/js/nouislider.min.js" type="text/javascript"></script>
<script src="~/Embedded/blog/standard/js/bootstrap-datepicker.js" type="text/javascript"></script>
<script src="~/Embedded/blog/standard/js/material-kit.js" type="text/javascript"></script>
<script>
    $().ready(function () {
        $(window).on('scroll', materialKit.checkScrollForTransparentNavbar);
    });
</script>
</html>