@using Blogifier.Core.Common
@using Blogifier.Core.Data.Domain
@using System.Collections.Generic
@using Blogifier.Core.Extensions
@using Blogifier.Core.Data.Models
@model BlogPostsModel
@{
    var term = ViewBag.Term;
}

@if (Model != null)
{
    <div class="jumbotron">
        <h2 class="search-term"><i class="fa fa-search" aria-hidden="true"></i> @term</h2>
    </div>
    foreach (var item in Model.Posts)
    {
    <div class="post-preview">
        <a href="~/blog/@item.Slug">
            <h2 class="post-title">
                @item.Title
            </h2>
            <h3 class="post-subtitle">
                @Html.Raw(item.Content)
            </h3>
        </a>
        <p class="post-meta">Posted by <a href="~/author/@item.BlogSlug">@item.AuthorName</a> on @item.Published.ToFriendlyDateString()</p>
    </div>
    <hr>
    }

    <nav aria-label="...">
        <ul class="pager">
            @if (Model.Pager.ShowOlder)
            {
            <li class="previous"><a href="~/search/@Model.Pager.Older/@term"><span aria-hidden="true">&larr;</span> Older</a></li>
            }
            @if (Model.Pager.ShowNewer)
            {
            <li class="next"><a href="~/search/@Model.Pager.Newer/@term">Newer <span aria-hidden="true">&rarr;</span></a></li>
            }
        </ul>
    </nav>
}