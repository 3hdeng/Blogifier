@model Blogifier.Core.Data.Models.AdminPackagesModel
@using Blogifier.Core.Common
@{
    Layout = $"~/{ApplicationSettings.BlogAdminFolder}/_Layout/_Layout.cshtml";
}
<div class="bf-posts-toolbar">
    <form class="bf-posts-search float-right" action="~/admin" method="get">
        <input class="form-control form-control-sm" type="search" name="search" placeholder="Search..." autocomplete="off" />
        <button class="item-submit" type="submit"><i class="fa fa-search"></i></button>
    </form>
</div>
<ul class="bf-posts-list" aria-label="posts">
    @foreach (var item in Model.Packages)
    {
        <li class="item">
            <label class="item-select custom-control custom-checkbox">
                <input type="checkbox" id="aaa" class="item-checkbox custom-control-input" />
                <span class="item-control custom-control-indicator"></span>
            </label>
            @if (item.HasSettings)
            {
                <a class="item-link item-link-mobile" href="~/admin/packages/widgets/@item.Title">@item.Title</a>
            }
            else
            {
                <a class="item-link item-link-mobile" href="#">@item.Title</a>
            }
            
            <div class="item-info">
                <span class="item-info-views" aria-label="Views">@item.Downloads downloads</span>
            </div>
            <span class="item-status"><i class="fa fa-circle"></i></span>
            <a class="item-show" href="~/@ApplicationSettings.BlogRoute" target="_blank" role="button"><i class="fa fa-external-link-square"></i></a>
        </li>
    }
</ul>