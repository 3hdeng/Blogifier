@page "/admin"

<div class="app-dashboard row no-gutters">
    <div class="app-dashboard-posts col-8">
        <PostsWidget @ref="PostsWidgetInstance" OnUpdate="UpdateHandler" />
    </div>
    <div class="app-dashboard-widgets col-4">
        <Profile />
        <Welcome @ref="WelcomeInstance" OnUpdate="UpdateHandler" />
        <MainChart />
        <Custom />
    </div>
</div>

@code {

    PostsWidget PostsWidgetInstance;
    Welcome WelcomeInstance;

    async Task UpdateHandler(string msg)
    {
        await PostsWidgetInstance.LoadPage(1);
        await WelcomeInstance.Load();
    }
}