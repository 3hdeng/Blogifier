<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogifier</title>
    <link href="~/blogifier/admin/reference/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/blogifier/admin/reference/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/blogifier/admin/reference/css/toastr.min.css" rel="stylesheet" />
    <link href="~/blogifier/admin/reference/css/animate.css" rel="stylesheet">
    <link href="~/blogifier/admin/reference/css/style.css" rel="stylesheet">
</head>
<body>
    <div id="wrapper">

        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs">
                                        <strong class="font-bold">David Williams</strong>
                                    </span> <span class="text-muted text-xs block">Art Director <b class="caret"></b></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li><a href="#">Logout</a></li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            IN+
                        </div>
                    </li>
                    <li class="posts">
                        <a href="~/admin"><i class="fa fa-th-large"></i> <span class="nav-label">Posts</span></a>
                    </li>
                    <li class="profile">
                        <a href="~/admin/profile"><i class="fa fa-user"></i> <span class="nav-label">Profile</span> </a>
                    </li>
                    <li class="syndication">
                        <a href="~/admin/syndication"><i class="fa fa-wrench"></i> <span class="nav-label">Tools</span> </a>
                    </li>
                    <li class="about">
                        <a href="~/admin/about"><i class="fa fa-gear"></i> <span class="nav-label">Settings</span> </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg">

            <div class="row border-bottom">
                <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary" href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <a href="#">
                                <i class="fa fa-sign-out"></i> Log out
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="wrapper wrapper-content animated fadeIn">
                @RenderBody()
            </div>

            <div class="footer">
                <div class="pull-right">
                    10GB of <strong>250GB</strong> Free.
                </div>
                <div>
                    <strong>Copyright</strong> Example Company &copy; 2014-2017
                </div>
            </div>

        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/blogifier/admin/reference/js/jquery-3.1.1.min.js"></script>
    <script src="~/blogifier/admin/reference/js/bootstrap.min.js"></script>
    <script src="~/blogifier/admin/reference/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/blogifier/admin/reference/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/blogifier/admin/reference/js/toastr.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/blogifier/admin/reference/js/app.js"></script>

    <script>
        $('li').removeClass('active');
        var activated = false;
        $("#side-menu li").each(function (idx, li) {
            if (window.location.pathname.indexOf("/" + $(li).attr("class")) > 0) {
                $(li).addClass('active');
                activated = true;
            }
        });
        if (activated === false) { $('.posts').addClass('active'); }
    </script>

    @RenderSection("Scripts", false)
</body>
</html>