@model Blogifier.Core.Data.Models.AdminPostsModel
@{
    //var themeFolder = "embedded/admin/standard";
    var themeFolder = "blogifier/admin/custom";
}
<link href="~/@themeFolder/lib/autocomplete/easy-autocomplete.min.css" rel="stylesheet" />

<div id="post-edit-actions" class="page-toolbar"></div>

<div id="page-content-wrapper">
    <div id="post-list">
        <ul id="admin-posts" class="list-group post-list elements-list"></ul>
        <ul class="pagination-custom"></ul>
    </div>
    <div id="post-edit" class="post-edit" style="display: none">
        <form id="frmEditor" style="height:100%;">
            <div class="row">
                <div class="col-9">
                    <div class="form-group">
                        <input id="txtPostTitle" class="form-control" placeholder="Post title..." />
                    </div>
                    <div class="form-group">
                        <textarea id="txtContent" name="txtContent"></textarea>
                    </div>
                </div>
                <div class="col-3">
                    <div id="post-image" class="form-group" style="display: none">
                        <!-- display none when we did upload a photo -->
                        <button type="button" class="post-image-upload" onclick="return postController.openFilePicker();">
                            <i class="fa fa-photo"></i><span>Add Post Cover</span>
                        </button>
                        <!-- display none when we didn't upload a photo -->
                        <div class="post-image-uploaded">
                            @*<input type="text" class="form-control" id="txtPostImage" placeholder="Post image" readonly />*@
                            <img src="~/blogifier/admin/custom/img/images.jpg" />
                            <div class="post-image-actions btn-group">
                                <button type="button" class="btn"><i class="fa fa-link"></i></button>
                                <button type="button" class="btn" onclick="return postController.resetPostImage();">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="post-category">

                       <ul id="edit-categories"></ul>
                        <form method="post" asp-controller="Admin" asp-action="Profile" asp-antiforgery="true">
                            <div class="input-group">
                                <input type="text" id="txtCategory" class="form-control" placeholder="category..." />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-secondary" onclick="postController.saveCategory()">Save</button>
                                </span>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal inmodal fade" id="modalFilePicker" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">File picker</h4>
            </div>
            <div class="modal-body">
                <div class="modal-list-empty" style="display: none">
                    You do not have any files yet - <a href="~/admin/files">upload now</a>!
                </div>
                <div class="asset-gallery" id="filePickerList"></div>
                <ul class="pager"></ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/@themeFolder/lib/tinymce/tinymce.min.js"></script>
    <script src="~/@themeFolder/lib/autocomplete/jquery.easy-autocomplete.min.js"></script>
    <script src="~/@themeFolder/js/filePickerController.js"></script>
    <script src="~/@themeFolder/js/postController.js"></script>
}