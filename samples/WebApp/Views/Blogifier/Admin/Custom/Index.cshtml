@model Blogifier.Core.Data.Models.AdminPostsModel
@using Blogifier.Core.Extensions
@using Blogifier.Core.Common;
@{
    var pgr = Model.Pager;
    var cntFrom = pgr.CurrentPage == 1 ? 1 : (pgr.CurrentPage - 1) * pgr.ItemsPerPage + 1;
    var cntTo = pgr.CurrentPage * pgr.ItemsPerPage < pgr.Total ? pgr.CurrentPage * pgr.ItemsPerPage : pgr.Total;
    var curPost = 0;
}
<div class="bf bf-posts">


    <div class="bf-sidebar">


        <!-- SIDEBAR HEADER -->
        <div class="bf-sidebar-posts-header">
            <label class="list-select"><input class="item-control item-control-multi" type="checkbox" name="selectAll"></label>
            <label class="list-filter"><i class="fa fa-filter item-control"></i></label>
            <a href="~/admin/editor/0" class="btn btn-light btn-block btn-new">New Post</a>
            <div class="btn-group btn-group-block btn-group-actions" role="group">
                <button type="button" class="btn btn-light btn-outline tooltip" onclick="return postsController.removePost()" title="Delete"><i class="fa fa-trash"></i></button>
                <button type="button" class="btn btn-light btn-outline tooltip" onclick="return postsController.publish()" title="Publish"><i class="fa fa-check"></i></button>
                <button type="button" class="btn btn-light btn-outline tooltip" onclick="return postsController.unpublish()" title="Unpublish"><i class="fa fa-archive"></i></button>
            </div>
        </div> 
        <!--/SIDEBAR HEADER -->


        <!-- SEARCH & FILTERS -->
        <div class="bf-sidebar-posts-tools">
            <form class="bf-sidebar-posts-search" action="~/admin" method="get">
                <input type="search" name="search" placeholder="search..." autocomplete="off" />
            </form>
            <form class="bf-sidebar-posts-filter" id="frmFilter" asp-controller="Admin" asp-action="Index" method="post">
                <h5>Filter by status:</h5>
                @foreach (var ftr in Model.StatusFilter)
                {
                    var ftrChecked = ftr.Selected ? "checked" : "";
                    <label class="custom-control custom-radio"><input type="radio" name="status-filter" value="@ftr.Value" @ftrChecked onclick="submitFilter()" class="custom-control-input"><span class="custom-control-indicator"></span><span class="custom-control-description">@ftr.Text</span></label>
                }
                <h5>Filter by categories:</h5>
                @foreach (var cat in Model.CategoryFilter)
                {
                    var isChecked = cat.Selected ? "checked" : "";
                    <label class="custom-control custom-checkbox"><input type="checkbox" name="category-filter" value="@cat.Value" @isChecked onclick="submitFilter()" class="custom-control-input chk"><span class="custom-control-indicator"></span><span class="custom-control-description">@cat.Text</span></label>
                }
            </form>
        </div>
        <!--/SEARCH & FILTERS -->
        

        <!-- POST LIST -->
        <ul class="bf-sidebar-posts-list" aria-label="posts">
            @foreach (var item in Model.BlogPosts)
            {
                var published = item.Published == DateTime.MinValue ? "DRAFT" : item.Published.ToString("MMM dd, yyyy");
                if(curPost == 0) { curPost = item.BlogPostId; }
                <li class="item">
                    <label class="item-select"><input type="checkbox" id="@item.BlogPostId" class="item-control item-control-multi"></label>

                    <a class="item-link item-link-desktop" href="" onclick="return postsController.showPost('@item.BlogPostId')">@item.Title</a>
                    <a class="item-link item-link-mobile" href="~/admin/editor/@item.BlogPostId">@item.Title</a>

                    <div class="hide">
                        <a href="/@ApplicationSettings.BlogRoute@item.Slug" data-toggle="tooltip" title="@item.PostViews views" target="_blank" aria-label="View" role="button"><i class="fa fa-eye"></i></a>
                        <a aria-label="Publish date">@published</a>
                    </div>
                </li>
            }
        </ul>
        <!--/POST LIST -->


        <!-- PAGINATION -->
        @if (pgr.ShowNewer || pgr.ShowOlder)
        {
            <ul class="pagination-custom" aria-label="Post navigation">
                @if (pgr.ShowOlder)
                {
                    <li><a href="~/admin/@pgr.Older" aria-label="Older posts"><i class="fa fa-long-arrow-left"></i></a></li>
                }
                <li><a class="item-count">@cntFrom-@cntTo out of @pgr.Total</a></li>
                @if (pgr.ShowNewer)
                {
                    <li><a href="~/admin/@pgr.Newer" aria-label="Newer posts"><i class="fa fa-long-arrow-right"></i></a></li>
                }
            </ul>
        }
        <!--/PAGINATION -->


    </div>


    <div class="bf-content bf-content-posts">

        <!-- PREVIEW POST (This section will change for each post) -->
        <div class="bf-content-post-cover" style="background-image:url(http://blogifier.azurewebsites.net/blogifier/data/francis/2017/7/a.jpg);">
            <div class="bf-content-post-cover-body">
                <p>March 24, 2017 / News, Security / 472 Views</p>
                <h1>Post Title...</h1>
                <div class="btn-group btn-group-sm float-left">
                    <button class="btn btn-primary btn-outline" onclick="postsController.editPost()">Edit</button>
                    <button class="btn btn-primary btn-outline" onclick="postsController.showPost()">View</button>
                </div>
                <div class="btn-group btn-group-icon btn-group-sm float-left" role="group">
                    <button type="button" class="btn btn-primary btn-outline tooltip" onclick="" title="Delete"><i class="fa fa-trash"></i></button>
                    <!-- TODO: we need an if statment to show one these two button, if its published or not -->
                    <button type="button" class="btn btn-primary btn-outline tooltip" onclick="" title="Publish"><i class="fa fa-check"></i></button>
                    <button type="button" class="btn btn-primary btn-outline tooltip" onclick="" title="Unpublish"><i class="fa fa-archive"></i></button>
                </div>
                <button class="btn btn-primary btn-outline btn-sm btn-icon float-right tooltip" data-modal-target="#modalFilePicker" onclick="" title="Change the cover"><i class="fa fa-photo"></i></button>
            </div>
        </div>
        <div class="bf-content-post-text">
            Content...
        </div>
        <!--/PREVIEW POST-->

    </div>


</div>

@Html.Partial("~/Views/Blogifier/Admin/Custom/_Shared/_FilePicker.cshtml")
@section Scripts{
    <script src="~/blogifier/admin/custom/js/postsController.js"></script>
    <script>
        var submitFilter = function () {
            $('#frmFilter').submit();
        }
        postsController.showPost('@curPost');
    </script>
}