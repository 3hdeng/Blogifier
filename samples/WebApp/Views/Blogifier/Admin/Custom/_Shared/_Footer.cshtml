@using Blogifier.Core.Common
@{ 
    var themeFolder = "blogifier/admin/custom";
}

<div class="admin-footer container">
    &copy; @DateTime.Now.Year 
    &mdash; <a href="http://blogifier.net/" target="_blank">Blogifier</a> (Version @Blogifier.Core.Common.ApplicationSettings.Version) 
    &mdash; <a href="https://github.com/blogifierdotnet/" target="_blank">GitHub</a>
</div>

<form method="post" id="frmLogOut" asp-controller="Account" asp-action="Logout" asp-antiforgery="true"></form>
<script src="~/@themeFolder/js/jquery-3.2.1.min.js"></script>
<script src="~/@themeFolder/js/tether.min.js"></script>
<script src="~/@themeFolder/js/bootstrap.min.js"></script>
<script src="~/@themeFolder/lib/toastr/toastr.min.js"></script>
<script src="~/@themeFolder/js/app.js"></script>
<script src="~/@themeFolder/js/dataService.js"></script>
<script src="~/@themeFolder/js/uploadController.js"></script>
<script>
        var webRoot = '@Url.Content("~/")';
        function getUrl(str) {
            return webRoot + str;
        };

        $(document).ready(function () {
            $('.post-list [data-toggle="tooltip"]').tooltip({
                offset: '-15px 0',
                animation: false
            });
            $('[data-toggle="tooltip"]').tooltip({
                animation: false
            });
        });
</script>