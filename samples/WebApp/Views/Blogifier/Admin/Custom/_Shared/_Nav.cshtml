@using Blogifier.Core.Common
@{
    var avatar = ApplicationSettings.ProfileAvatar;
    var userName = "";
    var blogTitle = ApplicationSettings.Title;
    if (Model.Profile != null)
    {
        userName = Model.Profile.AuthorName;
        blogTitle = Model.Profile.Title;
        if (!string.IsNullOrEmpty(Model.Profile.Avatar))
        {
            avatar = Model.Profile.Avatar;
        }
    }
}

<div class="bf-nav">
    <button class="bf-nav-toggle"><img alt="@userName" src="@avatar"></button>
    <div class="bf-nav-content">
        <div class="bf-nav-cover" style="background-image:url(/embedded/lib/img/cover.png);">
            <h2>Blog Title</h2>
            <p>Blog Description here ...</p>
        </div>
        <ul>
            <li><a href="~/admin">Posts</a></li>
            <li><a href="~/admin/settings/profile">Settings</a></li>
            <li><a href="~/@ApplicationSettings.BlogRoute@Model.Profile.Slug" target="_blank">View Blog</a></li>
            <li><a onclick="profileLogOut(); return false;">Logoff</a></li>
        </ul>
    </div>
    @*Blogifier (Version @Blogifier.Core.Common.ApplicationSettings.Version)*@
</div>

