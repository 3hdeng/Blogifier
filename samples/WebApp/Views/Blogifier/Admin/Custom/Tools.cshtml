@model Blogifier.Core.Data.Models.AdminToolsModel
@{
    //var themeFolder = "embedded/admin/standard";
    var themeFolder = "blogifier/admin/custom";
}
<div class="row top-row">
    <a href="#menu-toggle" class="btn btn-primary" id="menu-toggle">
        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
    </a>
</div>

<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>
                    RSS Import
                    <a href="https://github.com/blogifierdotnet/Blogifier.Core/wiki/RSS-Import" class="pull-right" style="color:#ccc" target="_blank" title="Help">
                        <span class="glyphicon glyphicon-question-sign help-icon" aria-hidden="true"></span>
                    </a>
                </h2>
                <form id="frmImport" name="frmImport">
                    <div class="form-group">
                        <input type="text" id="txtFeedUrl" class="form-control" placeholder="RSS Url" />
                    </div>
                    <div class="form-group">
                        <input id="txtDomain" type="text" class="form-control" placeholder="Domain Url" />
                    </div>
                    <div class="form-group">
                        <input id="txtSubDomain" type="text" class="form-control" placeholder="Sub Folder" />
                    </div>
                    <div class="form-group">
                        <input id="chkImportImages" type="checkbox" class="form-checkbox" />
                        <label for="chkImportImages">Import Images</label>
                    </div>
                    <div class="form-group">
                        <input id="chkImportAttachements" type="checkbox" class="form-checkbox" />
                        <label for="chkImportAttachements">Import Attachements</label>
                    </div>
                    <div id="btnImport">
                        <button type="button" class="btn btn-primary btn-save-setting btn-block" onclick="toolsController.importRss()">Import</button>
                    </div>
                </form>

                <form id="frmDisqus">
                    <h2>
                        Disqus script
                        <a href="https://github.com/blogifierdotnet/Blogifier.Core/wiki/Disqus-script" class="pull-right" target="_blank" title="Help">
                            <span class="glyphicon glyphicon-question-sign help-icon" aria-hidden="true"></span>
                        </a>
                    </h2>
                    <div id="disqusForm">
                        <div class="form-group">
                            <textarea asp-for="DisqusModel.CustomValue" class="form-control" placeholder="Disqus script" rows="10" cols="70"></textarea>
                        </div>
                        <div id="btnDisqus">
                            <button type="button" class="btn btn-primary btn-save-setting btn-block" onclick="toolsController.updateDisqus()">Save</button>
                            <input type="hidden" asp-for="DisqusModel.CustomKey" />
                            <input type="hidden" asp-for="DisqusModel.Id" />
                            <input type="hidden" asp-for="DisqusModel.ParentId" />
                            <input type="hidden" asp-for="DisqusModel.Title" />
                            <input type="hidden" asp-for="DisqusModel.CustomType" />
                        </div>
                    </div>
                    <div class="form-group text-center" id="importSpin" style="display: none">
                        <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    @if (!string.IsNullOrEmpty(Context.Request.Query["msg"]))
    {
        <script>toastr.success('@Context.Request.Query["msg"]')</script>
    }
    <script src="~/@themeFolder/js/toolsController.js"></script>
}