@model Blogifier.Core.Data.Models.AdminToolsModel

<div class="row top-row">
    <a href="#menu-toggle" class="btn btn-primary" id="menu-toggle">
        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
    </a>
</div>

<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                @Html.Partial("RssImportForm", Model.RssImportModel)
                @Html.Partial("DisqusForm", Model.DisqusModel)
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @if (!string.IsNullOrEmpty(Context.Request.Query["msg"]))
    {
        <script>toastr.success('@Context.Request.Query["msg"]')</script>
    }
}