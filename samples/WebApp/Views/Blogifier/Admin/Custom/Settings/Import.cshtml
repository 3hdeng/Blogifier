@model Blogifier.Core.Data.Models.AdminBaseModel
@{
    Layout = "~/Views/Blogifier/Admin/Custom/_LayoutSettings.cshtml";

    //var themeFolder = "embedded/admin/standard";
    var themeFolder = "blogifier/admin/custom";
}
<div id="page-content-wrapper">
    <form id="frmImport" name="frmImport">
        <div class="form-group">
            <input type="text" id="txtFeedUrl" class="form-control" placeholder="RSS Url" />
        </div>
        <div class="form-group">
            <input id="txtDomain" type="text" class="form-control" placeholder="Domain Url" />
        </div>
        <div class="form-group">
            <input id="txtSubDomain" type="text" class="form-control" placeholder="Sub Folder" />
        </div>
        <div class="form-group">
            <label class="custom-control custom-checkbox">
                <input type="checkbox" id="chkImportImages" class="custom-control-input">
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">Import Images</span>
            </label>
            <label class="custom-control custom-checkbox">
                <input type="checkbox" id="chkImportAttachements" class="custom-control-input">
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">Import Attachements</span>
            </label>
        </div>
        <div class="spin-icon" style="text-align: center; display:none">
            <i class="fa fa-spin fa-cog fa-2x fa-fw"></i>
            <span class="sr-only">Loading...</span>
        </div>
        <div id="btnImport">
            <button type="button" class="btn btn-success btn-lg btn-save-setting btn-block" onclick="toolsController.importRss()">Import</button>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/@themeFolder/js/toolsController.js"></script>
}