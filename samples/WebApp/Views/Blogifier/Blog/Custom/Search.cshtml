@using Blogifier.Core.Common
@using Blogifier.Core.Data.Domain
@using System.Collections.Generic
@using Blogifier.Core.Extensions
@using Blogifier.Core.Data.Models
@model BlogPostsModel
@{
    Layout = "~/Views/Blogifier/Blog/Custom/Layout/_layoutPage.cshtml";
    var term = ViewBag.Term;
}
<div class="container">

    @if (Model != null)
            {

        <h1>Search Results: "@term"</h1>
        <hr />
        foreach (var item in Model.Posts)
        {
            <article class="post-list-item">
                <h2 class="post-list-title"><a href="~/blog/@item.Slug">@item.Title</a></h2>
                <p class="post-list-info">Posted by <a href="~/author/@item.BlogSlug">@item.AuthorName</a> on @item.Published.ToFriendlyDateString()</p>
                <p class="post-list-content">@Html.Raw(item.Content)</p>
            </article>
        }

        <ul class="pager">
            @if (Model.Pager.ShowOlder)
            {
                <li class="previous"><a href="~/search/@Model.Pager.Older/@term"><span aria-hidden="true">&larr;</span> Older</a></li>
            }
            @if (Model.Pager.ShowNewer)
            {
                <li class="next"><a href="~/search/@Model.Pager.Newer/@term">Newer <span aria-hidden="true">&rarr;</span></a></li>
            }
        </ul>
    }

</div>