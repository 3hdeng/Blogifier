@using Blogifier.Core.Common
@using Blogifier.Core.Data.Domain
@using System.Collections.Generic
@using Blogifier.Core.Extensions
@using Blogifier.Core.Data.Models
@model BlogAuthorModel
@{
    var bg = Model.Profile.Image == null ? ApplicationSettings.ProfileImage : Model.Profile.Image;
}
<div class="blog-cover">
    <img class="blog-cover-img" src="@Model.Profile.Image" alt="Alternate Text" />
    <div class="blog-cover-title container">
        <h1>@Model.Profile.Title</h1>
        <p>@Model.Profile.Description</p>
    </div>
</div>
<div class="blog-content container">
    <div class="row">
        @if (Model != null)
        {
            foreach (var item in Model.Posts)
            {
                <div class="col-md-6 post-item-wrapper">
                    <article class="post-item">
                        <div class="post-item-cover">
                            <img class="post-item-img" src="@item.Image" alt="@item.Title" />
                            <div class="post-item-head">
                                <p class="post-item-info">By <a href="~/author/@item.BlogSlug">@item.AuthorName</a> &mdash; @item.Published.ToFriendlyDateString()</p>
                                <h2 class="post-item-title"><a href="~/blog/@item.Slug">@item.Title</a></h2>
                            </div>
                        </div>
                        <div class="post-item-content">
                            <p class="post-item-text dot-resize-update">@Html.Raw(item.Content) </p>
                            <a class="post-item-more" href="~/blog/@item.Slug">Read More...</a>
                        </div>
                    </article>
                </div>
            }
        }
    </div>
    @if (Model != null)
    {
        <ul class="pagination justify-content-center">
            @if (Model.Pager.ShowOlder)
            {
                <li class="page-item"><a class="btn btn-outline-secondary" href="~/author/@Model.Profile.Slug/@Model.Pager.Older"><span aria-hidden="true">&larr;</span> Older</a></li>
            }
            @if (Model.Pager.ShowNewer)
            {
                <li class="page-item"><a class="btn btn-outline-secondary" href="~/author/@Model.Profile.Slug/@Model.Pager.Newer">Newer <span aria-hidden="true">&rarr;</span></a></li>
            }
        </ul>
    }
</div>
