@using Blogifier.Core.Common
@using Blogifier.Core.Data.Domain
@using System.Collections.Generic
@using Blogifier.Core.Extensions
@using Blogifier.Core.Data.Models
@model BlogAuthorModel
@{
    var bg = Model.Profile.Image == null ? ApplicationSettings.ProfileImage : Model.Profile.Image;
}
<div class="container">

    @if (Model != null)
            {
                foreach (var item in Model.Posts)
                {
            <article>
                <h3 class="post-title"><a href="~/blog/@item.Slug">@item.Title</a></h3>
                <p class="post-meta">Posted by <a href="~/author/@item.BlogSlug">@item.AuthorName</a> on @item.Published.ToFriendlyDateString()</p>
            </article>
                <hr>
        }

        <ul class="pagination">
            @if (Model.Pager.ShowOlder)
                {
                <li><a class="btn btn-secondary" href="~/author/@Model.Profile.Slug/@Model.Pager.Older"><span aria-hidden="true">&larr;</span> Older</a></li>
            }
            @if (Model.Pager.ShowNewer)
                {
                <li><a class="btn btn-secondary" href="~/author/@Model.Profile.Slug/@Model.Pager.Newer">Newer <span aria-hidden="true">&rarr;</span></a></li>
            }
        </ul>
    }
</div>