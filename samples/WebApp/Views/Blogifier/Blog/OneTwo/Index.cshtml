@using Blogifier.Core.Common
@using Blogifier.Core.Data.Models
@using WebApp.Views.Blogifier.Widgets
@model BlogPostsModel
<section class="blog-cover" style="background-image: url('@Model.CoverImg')">
    <div class="container">
        <h1 class="cover-title">@ApplicationSettings.Title</h1>
        <p class="cover-desc">@ApplicationSettings.Description</p>
    </div>
</section>
<section class="container">
    @await Component.InvokeAsync("PostList", new { listType = ListType.RecentPosts, count = 2 })
</section>
@Html.Partial("~/Views/Blogifier/Blog/OneTwo/_Shared/_Post.cshtml", Model.Posts)
@Html.Partial("~/Views/Blogifier/Blog/OneTwo/_Shared/_Pager.cshtml", Model.Pager)
