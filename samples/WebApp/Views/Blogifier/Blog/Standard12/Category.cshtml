@using Blogifier.Core.Common
@using Blogifier.Core.Data.Models
@model BlogCategoryModel
@{
    var avatar = Model.Profile.Avatar == null ? ApplicationSettings.ProfileAvatar : Model.Profile.Avatar;
    Model.Pager.RouteValue = Model.Profile.Slug + "/" + Model.Category.Slug + "/";
}
<main class="page-category">
    <header class="category-header">
        <h2 class="category-title">@Model.Category.Title</h2>
        <p class="category-desc">Category</p>
    </header>
    @Html.Partial("~/Views/Blogifier/Blog/Standard12/_Shared/_Post.cshtml", Model.Posts)
    @Html.Partial("~/Views/Blogifier/Blog/Standard12/_Shared/_Pager.cshtml", Model.Pager)
</main>