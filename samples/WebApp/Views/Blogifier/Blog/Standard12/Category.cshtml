@using Blogifier.Core.Common
@using Blogifier.Core.Data.Domain
@using System.Collections.Generic
@using Blogifier.Core.Extensions
@using Blogifier.Core.Data.Models
@model BlogCategoryModel
@{
    var avatar = Model.Profile.Avatar == null ? ApplicationSettings.ProfileAvatar : Model.Profile.Avatar;
}
<main class="page-category">
    <header class="category-header">
        <h2 class="category-title">@Model.Category.Title</h2>
        <p class="category-desc">Category</p>
    </header>
    @if (Model != null)
    {
        foreach (var item in Model.Posts)
        {
            <article class="post">
                <section class="container">
                    <header class="post-header">
                        <h2 class="post-title"><a href="~/@ApplicationSettings.BlogRoute@item.Slug">@item.Title</a></h2>
                        <div class="post-meta">
                            <a href="~/@ApplicationSettings.BlogRoute@item.BlogSlug">
                                <img class="post-meta-img" src="/embedded/lib/img/avatar.jpg" alt="@item.AuthorName" />
                                <span class="post-meta-author">@item.AuthorName</span>
                            </a>
                            <time class="post-meta-time">@item.Published.ToFriendlyDateString()</time>
                            <span class="post-meta-category">in <a href="#">News</a></span>
                        </div>
                    </header>
                    <p class="post-excerpt">@Html.Raw(item.Content)</p>
                    <a class="post-more" href="~/@ApplicationSettings.BlogRoute@item.Slug">Read More</a>
                </section>
            </article>
        }
        <ul class="pagination justify-content-center">
            @if (Model.Pager.ShowOlder)
            {
                <li class="page-item prev"><a href="~/@ApplicationSettings.BlogRoute@Model.Profile.Slug/@Model.Category.Slug/@Model.Pager.Older"><i class="fa fa-angle-left"></i> <span>Older Posts</span></a></li>
            }
            @if (Model.Pager.ShowNewer)
            {
                <li class="page-item next"><a href="~/@ApplicationSettings.BlogRoute@Model.Profile.Slug/@Model.Category.Slug/@Model.Pager.Newer"><span>Newer Posts</span> <i class="fa fa-angle-right"></i></a></li>
            }
        </ul>
    }
</main>